<%= render "layouts/errors", :object => @lesson %>

<%= form_for [@section, @lesson] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :type %>
  <%= f.text_field :type %>
  <%= f.label :day %>
  <%= f.text_field :day %>
  <%= f.label :number %>
  <%= f.text_field :number %>
  <%= f.label :text %>
  <%= f.text_field :text %>
  <%= f.submit %>
<% end %>
